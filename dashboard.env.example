# UatuAudit Dashboard Configuration

# GitHub OAuth (required for authentication)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
OAUTH_CALLBACK_URL=http://localhost:8080/auth/callback

# Access Control
ALLOWED_GH_ORGS=your-org-name
ALLOWED_EMAILS=user@example.com,admin@example.com

# Security
SECRET_KEY=change-me-in-production-use-strong-random-key

# Dashboard Settings
DASHBOARD_CACHE_TTL=10
PORT=8080
HOST=0.0.0.0

# Optional: Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
