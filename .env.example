# UatuAudit Environment Configuration
# Copy this file to .env and fill in your values

# === API Keys ===
# OpenAI API Key for LLM features
OPENAI_API_KEY=sk-...

# Anthropic API Key for Claude models (optional)
ANTHROPIC_API_KEY=sk-ant-...

# GitHub Token for repository access
GITHUB_TOKEN=ghp_...

# Etherscan API Key for fetching verified contracts
ETHERSCAN_API_KEY=...

# === GitHub OAuth (for Dashboard) ===
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_REDIRECT_URI=http://localhost:8080/auth/github
OAUTH_CALLBACK_URL=http://localhost:8080/auth/callback

# API Configuration
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:8080

# === Database ===
# MongoDB connection (recommended for production)
MONGODB_URL=mongodb://admin:password@localhost:27017/uatu_audit?authSource=admin
MONGO_USERNAME=admin
MONGO_PASSWORD=password

# SQLite database (alternative to MongoDB)
DATABASE_URL=sqlite:///./uatu_audit.db

# Security Configuration
SECRET_KEY=your-super-secret-key-here-change-this
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this

# Application Configuration
DEBUG=true
ENVIRONMENT=development

# Port Configuration
DASHBOARD_PORT=8080
API_PORT=8000

# Payment Configuration (for future USDC integration)
PAYMENT_PROVIDER=base
USDC_CONTRACT_ADDRESS=0xa0b86a33e6ba83a6508b88d6c8a4e4ddb4cc6c44
PAYMENT_WEBHOOK_SECRET=your-payment-webhook-secret

# Audit Configuration
DEFAULT_AUDIT_PRICE_USDC=200
MAX_AUDIT_TIME_SECONDS=30

# === Audit Settings ===
AUDITS_ROOT=audits
EXTRA_ROOTS=out
MAX_FILE_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=.sol,.rs,.toml,.json,.md

# === Access Control ===
# Comma-separated list of allowed GitHub organizations
ALLOWED_GH_ORGS=

# Comma-separated list of allowed email addresses  
ALLOWED_EMAILS=

# === LLM Configuration ===
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=4000

# === External Services ===
WEBHOOK_URL=https://your-domain.com/webhooks/audit-complete
DASHBOARD_CACHE_TTL=10
