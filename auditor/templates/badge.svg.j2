<svg xmlns="http://www.w3.org/2000/svg" width="170" height="24" role="img" aria-label="risk: {{ grade }}">
  <linearGradient id="s" x2="0" y2="100%"><stop offset="0" stop-color="#bbb" stop-opacity=".1"/><stop offset="1" stop-opacity=".1"/></linearGradient>
  <mask id="m"><rect width="170" height="24" rx="4" fill="#fff"/></mask>
  <g mask="url(#m)">
    <rect width="60" height="24" fill="#555"/>
    <rect x="60" width="110" height="24" fill="{{ color }}"/>
    <rect width="170" height="24" fill="url(#s)"/>
  </g>
  <g fill="#fff" text-anchor="middle" font-family="DejaVu Sans,Verdana,Geneva,sans-serif" font-size="11">
    <text x="30" y="16">{{ label }}</text>
    <text x="115" y="16">{{ grade }} {{ '%.1f'|format(score) }}</text>
  </g>
</svg>
